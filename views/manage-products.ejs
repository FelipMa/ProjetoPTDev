<div>
    <% if (!req.session.user || userAdm != "on") { %>

        <h1>Acesso Restrito</h1>

    <% } else {%>

        <h1>Create Product</h1>

        <form method="POST" action="/manage-products/create-product">
            <input type="text" name="name" placeholder="Enter Name">
            <input type="text" name="price" placeholder="Enter Price">
            <input type="text" name="stock" placeholder="Enter Stock">
            <button type="submit">Submit</button>
        </form>

        <h1>Create Coupon</h1>

        <form method="POST" action="/manage-products/create-coupon">
            <input type="text" name="code" placeholder="Enter Coupon Code">
            <input type="text" name="discount" placeholder="Enter Discount">
            <button type="submit">Submit</button>
        </form>

        <h1>List of Products</h1>

        <% if (products.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(function(product) {  %>
                        <tr>
                            <td><%= product.name %></td>
                            <td><%= product.price %></td>
                            <td><%= product.stock %></td>
                            <td>
                                <a href=<%= `/manage-products/edit-product/${product.id}` %>>Edit</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else {%>
            <h3>No products found</h3>
        <% } %>


        <h1>List of Coupons</h1>

        <% if (coupons.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Discount</th>
                    </tr>
                </thead>
                <tbody>
                    <% coupons.forEach(function(coupon) {  %>
                        <tr>
                            <td><%= coupon.code %></td>
                            <td><%= coupon.discount %></td>
                            <td>
                                <a href=<%= `/manage-products/edit-coupon/${coupon.id}` %>>Edit</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else {%>
            <h3>No coupons found</h3>
        <% } %>

    <% } %>
</div>